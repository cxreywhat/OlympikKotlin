<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:context="passchange.PassChangeFragment"
        tools:ignore="ExtraText">

        <EditText
            android:id="@+id/editTextTextPassword4"
            android:layout_width="346dp"
            android:layout_height="43dp"
            android:background="@drawable/krugugol_i_color"
            android:ems="10"
            android:hint="   Подтверждение"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="229dp" />

        <EditText
            android:id="@+id/editTextTextPassword3"
            android:layout_width="346dp"
            android:layout_height="43dp"
            android:background="@drawable/krugugol_i_color"
            android:ems="10"
            android:hint="   Новый"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="167dp" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="306dp"
            android:layout_height="58dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="700dp"
            android:gravity="center|left"
            android:text="Изменение пароля"
            android:textColor="@color/black"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.488"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="346dp"
            android:layout_height="43dp"
            android:background="@drawable/krugugol_i_color"
            android:ems="10"
            android:hint="   Текущий"
            android:inputType="textPassword"
            tools:layout_editor_absoluteX="33dp"
            tools:layout_editor_absoluteY="106dp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="417dp"
            android:layout_height="70dp"
            android:layout_marginTop="90dp"
            android:text="Редактировать"
            android:textColor="@color/material_dynamic_primary50"
            android:textSize="16sp"
            app:backgroundTint="@color/material_dynamic_neutral90"
            app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword4"
            tools:layout_editor_absoluteX="-3dp" />

        <view
            android:id="@+id/view2"
            class="androidx.appcompat.widget.ActionMenuView"
            android:layout_width="452dp"
            android:layout_height="2dp"
            android:layout_marginTop="8dp"
            android:background="@color/black"
            app:layout_constraintTop_toBottomOf="@+id/textView3"
            tools:layout_editor_absoluteX="0dp" />

        <view
            android:id="@+id/view3"
            class="androidx.appcompat.widget.AppCompatRadioButton"
            android:layout_width="452dp"
            android:layout_height="2dp"
            android:layout_marginBottom="8dp"
            android:background="@color/black"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="-2dp" />

        <view
            android:id="@+id/view5"
            class="androidx.appcompat.widget.AppCompatRadioButton"
            android:layout_width="452dp"
            android:layout_height="1dp"
            android:background="@color/black"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="429dp" />

        <view
            android:id="@+id/view6"
            class="androidx.appcompat.widget.AppCompatRadioButton"
            android:layout_width="452dp"
            android:layout_height="1dp"
            android:background="@color/black"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="365dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>